<section class="moj-context-header" role="region" aria-label="Offender details">
  <div class="moj-context-header__top-block">
    <dl>
    <dt class=""></dt>
    <dd class="govuk-!-font-size-24 govuk-!-font-weight-bold govuk-body govuk-!-margin-left-0">{{ offenderDetails.name }}</dd>
    {% if offenderDetails.crn %}
      <dt class="govuk-!-font-size-19 ">CRN:</dt>
      <dd class="govuk-!-font-size-19 ">{{ offenderDetails.crn }}</dd>
    {% endif %}
    {% if offenderDetails.pnc %}
      <dt class="govuk-!-font-size-19 ">PNC:</dt>
      <dd class="govuk-!-font-size-19 ">{{ offenderDetails.pnc }}</dd>
    {% endif %}
    {% if offenderDetails.dob %}
      <dt class="govuk-!-font-size-19 ">Date of birth:</dt>
      <dd class="govuk-!-font-size-19 ">{{ offenderDetails.dob | date("DD MMMM YYYY")}} ({{ offenderDetails.age }} years old)</dd>
    {% endif %}
    </dl>
  </div>
</section>