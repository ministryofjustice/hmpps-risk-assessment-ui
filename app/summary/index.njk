{% endblock %}

{% block content %}

    <h1 class="govuk-heading-l">
        {{ subheading }}
    </h1>

    <div class="govuk-grid-row-full">
        <div class="govuk-grid-column">
            <form method="post" style="display: flex; justify-content: flex-end">
                {{ govukButton({
                    text: 'Complete assessment',
                    classes: 'govuk-!-margin-bottom-3'
                }) }}
            </form>
        </div>
    </div>

    <div class="govuk-grid-row-full">
        <div class="govuk-grid-column">
            {{ arnTaskList(summary) }}
        </div>
    </div>


{% endblock %}
