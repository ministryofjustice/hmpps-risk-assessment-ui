{% from "common/templates/components/task-list/macro.njk" import arnTaskList %}
{% from "moj/components/banner/macro.njk" import mojBanner %}

{% set heading = 'Assessment progress' %}

{% set errorHeading = "Error - " + heading %}


{% block pageTitle %}
    {% if errors %}
        {{ errorHeading }}
    {% else %}
        {{ heading }}
    {% endif %}
{% endblock %}

